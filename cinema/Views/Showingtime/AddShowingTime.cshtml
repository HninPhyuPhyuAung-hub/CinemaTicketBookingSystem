<div class="custom-card">
    <div class="row">
        <div class="col-md-offset-0">

            <span class="v-bottom" style="font-size:18px;font-weight:500;color:#428af5; padding-right:1100px;">
                <h1>Movie Showing Time List</h1>
            </span>


            <button id="addseat" type="button" class="btn btn-primary btn-sm btn-rounded btnmain" style="background-color:#0000ff;border-color:#47d147;border-color:black" onclick="EditShowingTime()" title="Add New"><i class="fa fa-plus"></i> Add New Showing Time</button>


        </div>
    </div>
    <br />
    <div class="container-fluid">
        <table id="showingtime" class="table table-bordered table-striped table-hover" width="100%">
