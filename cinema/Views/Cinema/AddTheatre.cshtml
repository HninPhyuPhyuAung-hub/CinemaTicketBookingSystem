                        <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                        <button type="button" class="btn btn-primary" onclick="DelAward()">Yes</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="awardMD">
