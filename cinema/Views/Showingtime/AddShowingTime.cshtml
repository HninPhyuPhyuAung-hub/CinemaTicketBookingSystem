<div class="modal fade" id="showMD">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="modalHeaderSample">Add Showing Time</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <br />

            @model cinema.Models.showingtime
            <div class="modal-body" id="modalBodySample">
                @using (Html.BeginForm("addshowtime", "Showingtime", FormMethod.Post, new { @id = "SOFORM" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row">

                        <div class="form-group">
                            <div class="col-md-3"><label>Movie Name</label></div>
                            <div class="col-md-9">

                                @{
                                    var mname = new List<SelectListItem>()
                                    {

                                    };
                                }

                                <select name="moviename" class="form-control statehidden" id="mname" value="mname"></select>

                            </div>
                        </div>
                    </div>




                    <div class="row">

                        <div class="form-group">
                            <div class="col-md-3"><label>Theatre Name</label></div>
                            <div class="col-md-9">

                                @{
                                    var tname = new List<SelectListItem>()
                                    {

                                    };
                                }

                                <select name="theatrename" class="form-control statehidden" id="tname" value="tname"></select>

                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="form-group">
                            <div class="col-md-3"><label>Showing Time</label></div>
                            <div class="col-md-9">
                                @*<input type="datetime-local" name="end-time" id="end-time" class="form-control">*@
                                @Html.TextBoxFor(model => model.time, "{0:yyyy-MM-dd HH:mm}", new { @id = "time", @type = "datetime-local", @class = "form-control" })



                            </div>
                        </div>

                    </div>
                    


                    <div class=" form-group text-center">
                        <button class="btn btn-primary mt-2 w-50" style="" type="submit">Submit</button>
                    </div>
                    <input type="hidden" name="showid" value="0" id="showid" />



                }
            </div>
        </div>
    </div>
</div>
@section scripts{

    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/data.js"></script>
    <script src="https://code.highcharts.com/modules/drilldown.js"></script>
    <script src="~/Scripts/jquery.autocomplete.min.js"></script>

    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
    <script type="text/javascript">


        $(function () {
            showingtimelist();
            
        });

        function showingtimelist() {
            var SetData = $("#showingtime tbody").empty();

            if ($.fn.dataTable.isDataTable('#showingtime')) {

                $('#showingtime').DataTable().clear().destroy();

            }

            $('#showingtime').DataTable({

                "ajax": {
                    "url": "/Showingtime/ShowingTimeList",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [

                    { "data": "theatrename" },
                    { "data": "moviename" },
                    {
                        "data": "time", render: function (data, type, row) {
                            if (type === "sort" || type === "type") {
                                return data;
                            }
                            return moment(data).format("MM/DD/YYYY HH:mm");
                        }
                    },
                    

                    { className: "hide", data: 'showid' },
                    {

                        "mRender": function (data, type, row) {
                            return '<a href="#" class="editor_remove" onclick="EditShowingTime(' + row.showid + ')">Edit</a>'



                        }
                    }, {

                        "mRender": function (data, type, row) {
                            return '<a href="#" class="editor_remove" onclick="DeleteShowingTime(' + row.showid + ')">Delete</a>'


                        }
                    }

                ]

            });


        }

        function EditShowingTime(showid) {
            //alert(showid);
            
            $.ajax({
                cache: false,
                url: '@Url.Action("EditShowingTime","Showingtime")',
                data: { showid: showid },
                beforeSend: function () {
                    getmoviename();
                },
                success: function (result) {
                    if (result != null) {
                        
                        var c = result[0].time;
                        date = moment(c).format("YYYY-MM-DD HH:mm");
                        alert(date)
                        $('#mname').val(result[0].moviename);
                        
                        $('#tname').val(result[0].theatrename);
                        
                        $('#time').val(date);
                       // console.log(result);
                   }
                },
                complete: function() {
                    $('#showMD').modal('show');
                }
            });
        }
        function getmoviename() {
            $.ajax({
                cache: false,
                url: '@Url.Action("getmoviename", "Showingtime")',
                beforeSend: function () {

                },
                success: function (result) {
                    if (result != null) {
                        $("#mname").empty();
                        $("#mname").append($('<option value=""> -- Choose -- </option>'));
                        for (i = 0; i < result.length; i++) {
                            $('#mname').append($('<option value="' + result[i].Value + '">' + result[i].Value + '</option>>'));
                        }
                    }
                     $.ajax({
                        cache: false,
                        url: '@Url.Action("gettheatrename", "Showingtime")',
                        beforeSend: function () {

                        },
                        success: function (result) {
                            if (result != null) {
                                $("#tname").empty();
                                $("#tname").append($('<option value=""> -- Choose -- </option>'));
                                for (i = 0; i < result.length; i++) {
                                    $('#tname').append($('<option value="' + result[i].Value + '">' + result[i].Value + '</option>>'));
                                }
                            }
                        },
                        complete: function () {

                        }

                    });

            },
                complete: function () {



                }

            });
        }
    </script>
}
